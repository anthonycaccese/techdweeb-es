<theme>
   <formatVersion>7</formatVersion>
   <variables>
      <distributionPath ifSubset="distribution:retrobat">~/.emulationstation/</distributionPath>
      <distributionPath ifSubset="distribution:rocknix">~/roms/_userdata/</distributionPath>
      <distributionPath ifSubset="distribution:batocera">/userdata/</distributionPath>
      <themeCustomizationsPath>${distributionPath}theme-customizations/techdweeb/</themeCustomizationsPath>
   </variables>
   <include ifSubset="color-scheme:custom">${themeCustomizationsPath}colors.xml</include>
   <include>./colors.xml</include>
   <view name="splash">
      <splash name="splash">
         <backgroundColor>${splashBackgroundColor}</backgroundColor>
      </splash>
      <image name="background">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <image name="progressbar">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <color>${splashProgressBarColor}</color>
         <colorEnd>${splashProgressBarColor}</colorEnd>
      </image>
      <image name="progressbar:active">
         <color>${splashProgressBarActiveColor}</color>
         <colorEnd>${splashProgressBarActiveColor}</colorEnd>
      </image>
      <text name="label">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.7</pos>
         <size>0.8 0</size>
         <alignment>center</alignment>
         <fontPath>./_inc/fonts/dwb_title.ttf</fontPath>
         <fontSize>0.075</fontSize>
         <lineSpacing>0.75</lineSpacing>
         <color>${splashTextColor}</color>
      </text>
   </view>
</theme>